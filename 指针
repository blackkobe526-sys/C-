#include <stdio.h>

int main() {
    int a = 888;        // 普通变量，值是 888
    
    int *p = &a;        // 定义一个指针 p，存 a 的地址
    
    printf("a 的值 = %d\n", a);           // 888
    printf("a 的地址 = %p\n", &a);         // 比如 0x7ffd5e1c4b4c（每次运行都可能变）
    printf("p 里面存的内容（也就是地址）= %p\n", p);
    printf("通过 *p 取出来的值 = %d\n", *p);  // 888  ← 重点！！！
    
    // 重点来了：我可以通过指针改掉 a 的值！
    *p = 999;
    
    printf("改完之后 a 的值变成了 = %d\n", a);   // 999！！
    
    return 0;
}
